#include <Arduino.h>


#define Delimiter '&' // Diaxoristis gia endoles
#define EndInput '\r' // Pos tlioni i grami
#define StartMessage '!' // Pos tlioni i grami
#define EndMessage '$' // Pos tlioni i grami
#define EndLine "\n\r"//"\n\r" // 

int LED12 = 12;
int LED11 = 11;
int LED10 = 10;
int LED9 = 9;
int LED8 = 8;
int LED7 = 7;
int LED6 = 6;
int LED5 = 5;

int timer = 1000;


byte index = 0;
String message[30]="";
boolean startRead = false;
boolean getInputComplete = false;

void setup() {
  // put your setup code here, to run once:
  pinMode(LED12, OUTPUT);
  pinMode(LED11, OUTPUT);
  pinMode(LED10, OUTPUT);
  pinMode(LED9, OUTPUT);
  pinMode(LED8, OUTPUT);
  pinMode(LED7, OUTPUT);
  pinMode(LED6, OUTPUT);
  pinMode(LED5, OUTPUT);
  Serial.begin(9600);
  
}


void getInput(){

  char received = Serial.read();
  Serial.print("Message Received: ");
  Serial.println(received, HEX);

  if (received == StartMessage)
  {

    startRead = true;
    received = ' ';
    
  }
  if (startRead == true)
  {
    Serial.println("HELLO");
    // switch(received)
    // {
    //   case 32 :
  
    //   break;
    //   case 10 :
  
    //   break;
    //   case 8:
  
    //   break;
  
    //   case Delimiter:
    //     index++;
    //     break;
    //   case EndMessage :
    //     getInputComplete = true;
    //     startRead = false;
    //   break;
    //   default:
    //     message[index] += received;
    // }
  }
  
}




void serial_event()
{
  if(Serial.available()> 0)
  {
    char received = Serial.read();
    Serial.print("Message Received: ");
    Serial.println(received, DEC);
    getInput();
  }
}

void loop() {
  serial_event();
  // put your main code here, to run repeatedly:
  // digitalWrite(LED7, LOW);
  // delay(timer);
  // digitalWrite(LED7, LOW);
  // digitalWrite(LED9, LOW);
  // delay(timer);
  // digitalWrite(LED9, LOW);
  // digitalWrite(LED12, LOW);
  // delay(timer);
  // digitalWrite(LED12, LOW);
}






